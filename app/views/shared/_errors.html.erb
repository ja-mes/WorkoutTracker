<% if obj.errors.any? %>
  <div class="row form-errors" style="margin-bottom: 10px;">
    <div class="col-md">
      <div class="card text-white bg-danger">
        <div class="card-body">
          <h5 class="card-title">
            <%= pluralize(obj.errors.count, "error") %> in form
          </h5>

          <ul class="card-text">
            <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
